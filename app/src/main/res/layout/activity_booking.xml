<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardElevation="15dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardElevation="@dimen/_8sdp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Booking Details"
                android:layout_marginBottom="@dimen/_20sdp"
                android:textAlignment="center"

                android:textSize="@dimen/_20sdp"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">




                <TextView
                    android:id="@+id/room_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Select Room/suit"
                    android:textAlignment="center"
                    android:layout_marginRight="@dimen/_50sdp"
                    android:layout_marginLeft="@dimen/_50sdp"
                    android:drawableLeft="@drawable/ic_baseline_swap_vert_24"
                    android:textSize="20dp"
                    android:textStyle="bold" />




                <TextView
                    android:id="@+id/checkin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:layout_marginRight="@dimen/_50sdp"
                    android:layout_marginLeft="@dimen/_50sdp"
                    android:hint="Select Check  In  Date"
                    android:drawableLeft="@drawable/ic_baseline_calendar_today_24"
                    android:textColor="@color/colorPrimary"
                    android:textSize="17sp"
                    tools:ignore="UnknownId" />

                <TextView
                    android:id="@+id/checkout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/cart_product_quantity"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:gravity="center"
                    android:hint="Select Check Out Date"
                    android:textColor="@color/colorPrimary"
                    android:drawableLeft="@drawable/ic_baseline_calendar_today_24"
                    android:layout_marginRight="@dimen/_50sdp"
                    android:layout_marginLeft="@dimen/_50sdp"
                    android:textSize="17sp"
                    tools:ignore="UnknownId" />

                <TextView
                    android:id="@+id/guests"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/cart_product_quantity"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:text="Guests details"
                    android:textSize="17sp"
                    tools:ignore="UnknownId" />

                <LinearLayout
                    android:id="@+id/checkoutlayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:visibility="visible"
                    tools:ignore="UnknownId">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/cart_product_quantity"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:hint="Adults"
                            android:textSize="17sp"
                            tools:ignore="UnknownId" />

                        <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
                            android:id="@+id/adultselegantbtn"
                            android:layout_width="@dimen/_150sdp"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_marginLeft="85dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="5dp"
                            android:layout_marginRight="@dimen/_20sdp"
                            android:background="@color/colorPrimary">

                        </com.cepheuen.elegantnumberbutton.view.ElegantNumberButton>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/cart_product_quantity"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:hint="Children"
                            android:textSize="17sp"
                            tools:ignore="UnknownId" />

                        <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
                            android:id="@+id/childrenButton"
                            android:layout_width="@dimen/_150sdp"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_marginLeft="70dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="5dp"
                            android:layout_marginRight="@dimen/_20sdp"

                            android:background="@color/colorPrimary" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/cart_product_quantity"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:hint="Infants"
                            android:textSize="17sp"
                            tools:ignore="UnknownId" />

                        <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
                            android:id="@+id/infantsbtn"
                            android:layout_width="@dimen/_150sdp"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_marginLeft="80dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="5dp"
                            android:layout_marginRight="@dimen/_20sdp"
                            android:background="@color/colorPrimary">

                        </com.cepheuen.elegantnumberbutton.view.ElegantNumberButton>
                    </LinearLayout>


                </LinearLayout>


                <Button
                    android:id="@+id/book_button"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:layout_marginBottom="@dimen/_15sdp"
                    android:background="@drawable/button_background_blue"
                    android:backgroundTint="@color/colorPrimary"
                    android:text="Book Now"
                    android:textColor="#ffff"
                    android:textSize="20sp" />


            </LinearLayout>


        </LinearLayout>


    </androidx.cardview.widget.CardView>

</androidx.cardview.widget.CardView>